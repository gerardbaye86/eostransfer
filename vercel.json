{
  "functions": {
    "api/login.ts": {
      "memory": 128,
      "maxDuration": 10
    },
    "api/chat.ts": {
      "memory": 128,
      "maxDuration": 30
    },
    "api/files.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ]
}
